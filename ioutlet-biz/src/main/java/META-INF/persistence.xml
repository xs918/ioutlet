<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="primary">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/mysql</jta-data-source>
		<mapping-file>sg/com/ioutlet/bas/CommonPojo.xml</mapping-file>
		<mapping-file>sg/com/ioutlet/ace/user/User.xml</mapping-file>
		<mapping-file>sg/com/ioutlet/ace/role/Role.xml</mapping-file>
		<mapping-file>sg/com/ioutlet/ace/domain/Domain.xml</mapping-file>
	    <mapping-file>sg/com/ioutlet/ace/function/Function.xml</mapping-file>
	    <mapping-file>sg/com/ioutlet/ace/functionaccess/FunctionAccess.xml</mapping-file>
	
		<mapping-file>sg/com/ioutlet/model/img/Imge.xml</mapping-file>
		<mapping-file>sg/com/ioutlet/model/bizinfo/BizInfo.xml</mapping-file>
		<properties>
			<!-- Properties for Hibernate -->
			<!-- <property name="hibernate.hbm2ddl.auto" value="create-drop" /> -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.connection.useUnicode" value="true" />
		    <property name="hibernate.connection.characterEncoding" value="UTF-8" />
		    <property name="hibernate.connection.charSet" value="UTF-8" />
		 



		</properties>
	</persistence-unit>
</persistence>
