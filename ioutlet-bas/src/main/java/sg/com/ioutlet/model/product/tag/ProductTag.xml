<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings 
  xmlns="http://java.sun.com/xml/ns/persistence/orm"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_1_0.xsd"
  version="1.0">
  
 	<named-query name="ProductTag.getByProductTagUuid.String">
		<query>
			SELECT p
			FROM ProductTag p
			WHERE p.key.uuid = :UUID
		</query>
	</named-query> 
	<named-query name="ProductOption.getByProductName.String">
		<query>
			SELECT p
			FROM ProductTag p
			WHERE p.ProductTag.name = :PRODUCTTAG_NAME
		</query>
	</named-query>      
	
    <entity class="sg.com.ioutlet.model.product.tag.ProductTag"
          access="FIELD">
    <table name="PRODUCT_TAGS"/>
    
      <attributes>
       	<embedded-id name="key" />
	 
      	<basic name="productTagName" optional="false">
			<column name="NAME" nullable="false" length="50"/>
	    </basic>
	 
	 	<basic name="prodectDesc" optional="true">
			<column name="DESCRIPTION" nullable="true" length="200"/>
	    </basic>
		
		<many-to-one name="product" optional="false">
				<join-column name="PRODUCT_UUID" referenced-column-name="UUID"
					insertable="true" updatable="true" />
		</many-to-one>
	    
	    </attributes>
	 </entity>
	<embeddable class="sg.com.ioutlet.model.product.tag.ProductTagKey"
		access="FIELD">
		<attributes>
			<basic name="uuid" optional="false">
				<column name="UUID" nullable="false" length="40" />
			</basic>
		</attributes>
	</embeddable>
	
 </entity-mappings>

 