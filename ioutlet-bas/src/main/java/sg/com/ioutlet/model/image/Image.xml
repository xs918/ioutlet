<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">


	<named-query name="Image.getAll">
		<query>
			SELECT u
			FROM User u
			WHERE u.recordStatus='A'
		</query>
	</named-query>




	<entity class="sg.com.ioutlet.model.image.Image" access="FIELD">
		<table name="IMGES" />



		<attributes>
			<embedded-id name="key" />
		     <basic name="imageName" optional="false">
				<column name="IMG_NAME" nullable="false" length="100" />
			</basic>

			<basic name="imageUrl" optional="false">
				<column name="IMG_URL" nullable="false" length="510" />
			</basic>

	
		    <basic name="fullPath" optional="false" >
				<column name="FULL_PATH" nullable="false" length="255" />
			</basic>
	
			<many-to-one name="user" optional="false">
				<join-column name="LINK_ID" referenced-column-name="UUID"
					insertable="true" updatable="true" />
			</many-to-one>



		</attributes>
	</entity>
	<embeddable class="sg.com.ioutlet.model.image.ImageKey"
		access="FIELD">
		<attributes>
			<basic name="uuid" optional="false">
				<column name="UUID" nullable="false" length="40" />
			</basic>
		</attributes>
	</embeddable>

</entity-mappings>

 