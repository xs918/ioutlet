<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- 
  - This file is included by the struts.xml file as an example
  - of how to break up the configuration file into multiple files.
-->
<struts>


  <package name="iolt-default" namespace="/" extends="struts-default">

	
	
	
		
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
            			<result-type name="redirect-action"
				class="org.apache.struts2.dispatcher.ServletActionRedirectResult"
				default="false" />				
	     </result-types>

      <interceptors>
        

		
		<interceptor name="form-load"
				class="sg.com.ioutlet.framework.web.interceptor.FormLoadingInterceptor">
				<param name="includeMethods">input</param>
		</interceptor>
		
		<interceptor name="form-submit"
				class="sg.com.ioutlet.framework.web.interceptor.FormSubmitInterceptor">
				<param name="excludeMethods">
					input,back,cancel,complete
				</param>
		</interceptor>
		
		<interceptor-stack name="form-required">
				<interceptor-ref name="form-load" />
				<interceptor-ref name="form-submit" />
		</interceptor-stack>
		
		
		
		
		<interceptor name="authorization-check"
				class="sg.com.ioutlet.framework.web.interceptor.AuthorizationCheckInterceptor">
		</interceptor>
		
		
		<interceptor-stack name="loggedinuser">
				<interceptor-ref name="authorization-check" />
		</interceptor-stack>
			
		
		
			
		<interceptor name="uncatch-biz-exception"
				class="sg.com.ioutlet.framework.web.interceptor.BusinessExceptionInterceptor" >
		</interceptor>	
		

			
		
		<interceptor name="transaction-control"
				class="sg.com.ioutlet.framework.web.interceptor.TransactionControlInterceptor">
		</interceptor>
				
				
	 		
		<interceptor-stack name="framework-required">
				<interceptor-ref name="uncatch-biz-exception" />
				<interceptor-ref name="transaction-control" />
		</interceptor-stack>
	
		<interceptor-stack name="ioutletdefaultStack">
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="form-required" />
		<!-- 	<interceptor-ref name="framework-required" /> -->
		</interceptor-stack>



		</interceptors>
		
		<default-interceptor-ref name="ioutletdefaultStack" />

          
          
         <global-results>
			<result name="error" type="tiles">COMMON.ERROR</result>
			<result name="invalid.token" type="tiles">
				COMMON.ERROR
			</result>
			<result name="invalid.input" type="tiles">
				COMMON.ERROR
			</result>
			<result name="dirty.request" type="tiles">
				COMMON.ERROR
			</result>
			<result name="unathorized">
				<param name="location">/errors/403.jsp</param>
			</result>
			<result name="eoprunning">
				<param name="location">/errors/batch.jsp</param>
			</result>
			<result name="un.supported.chars">
				<param name="location">
					/errors/specialcharacter.jsp
				</param>
			</result>

			
            <result name="login" type="redirect-action">
				<param name="namespace">/login</param>
				<param name="actionName">index</param>
			</result>



			<result name="changepassword" type="redirect">
				<param name="location">/changepassword.jsp</param>
			</result>

			<result name="dynamic" type="redirect-action">
				<param name="action">
					${#session.dynamic_result_action}
				</param>
				<param name="namespace">
					${#session.dynamic_result_namespace}
				</param>
			</result>
			<result name="dynamic_back" type="redirect-action">
				<param name="action">
					${#session.dynamic_back_action}
				</param>
				<param name="namespace">
					${#session.dynamic_back_namespace}
				</param>
			</result>

			<!-- Added by Hee Kian @ 04/08/2008, configure the report viewer -->
			<result name="displayreport" type="redirect-action">
				<param name="namespace">/reportviewer</param>
				<param name="actionName">index</param>
			</result>

			<!-- added by Wunna, wait page for wait and execute interceptor -->
			<result name="wait">
				/WEB-INF/pages/common/workflow/wait.jsp
			</result>

		</global-results>
		
		
        
         <action name="index" class="sg.com.ioutlet.web.main.MainPageDisplayAction" method="input">
           <interceptor-ref name="loggedinuser" />
            <result name="input" type="tiles">index</result>
        </action>

        <!-- Add additional "example" package actions here. -->

    </package>
</struts>
